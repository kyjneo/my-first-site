<!DOCTYPE html>
<html>
<head>
  <title>D-day 계산기</title>
  <meta charset="UTF-8">
</head>
<body>
  <h1>D-day 계산기</h1>
  <input type="date" id="dateInput" />
  <button onclick="calculate()">계산하기</button>
  <p id="result"></p>

  <script>
    function calculate() {
      const inputDate = new Date(document.getElementById('dateInput').value);
      const today = new Date();
      const diff = Math.ceil((inputDate - today) / (1000 * 60 * 60 * 24));
      document.getElementById('result').innerText = `D-${diff}`;
    }
  </script>
</body>
</html>
